{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CV contact data",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "email": {
      "description": "Email address",
      "type": "string"
    },
    "phone": {
      "description": "Phone number (with international code)",
      "type": "string"
    },

    "github": {
      "description": "GitHub username",
      "type": "string"
    },
    "linkedin": {
      "description": "LinkedIn username",
      "type": "string"
    },
    "twitter": {
      "description": "Twitter username",
      "type": "string"
    },
    "website": {
      "description": "Personal website (without https://)",
      "type": "string"
    }
  },
  "required": ["email", "phone"]
}
